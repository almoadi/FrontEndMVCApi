@model FrontEndMVC.Models.ModelView

<div class="container mx-auto p-6">
    <div class="bg-white shadow-md rounded-lg p-6 mt-6">
        <h2 class="text-3xl font-bold text-gray-800 mb-6">Create Passenger</h2>
        <form asp-action="Create" asp-controller="Passenger" method="post" class="space-y-4" asp-route-id="@Model?.Flight?.Id">
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                    <label asp-for="Passenger.FullName" class="block text-sm font-medium text-gray-700">Full Name</label>
                    <input asp-for="Passenger.FullName" type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Passenger.FullName" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Passenger.PhoneNumber" class="block text-sm font-medium text-gray-700">Phone Number</label>
                    <input asp-for="Passenger.PhoneNumber" type="text" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Passenger.PhoneNumber" class="text-red-600 text-sm"></span>
                </div>
                <div>
                    <label asp-for="Passenger.Email" class="block text-sm font-medium text-gray-700">Email</label>
                    <input asp-for="Passenger.Email" type="email" class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" />
                    <span asp-validation-for="Passenger.Email" class="text-red-600 text-sm"></span>
                </div>
            </div>
            <div class="flex justify-end">
                <button type="submit" class="bg-indigo-600 text-white py-2 px-4 rounded-md shadow-sm hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">Create</button>
            </div>
        </form>
        <div class="mt-4">
            <a asp-action="Index" class="text-indigo-600 hover:text-indigo-900">Back to Passenger List</a>
        </div>
    </div>
</div>
